<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            style="@style/ActivityHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_view_report" />

        <TextView style="@style/HorizontalDivider" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/LargeText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/category"
                                android:textAllCaps="false"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/LargeText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/report_id"
                                android:textAllCaps="false"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/LargeText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/date"
                                android:textAllCaps="false"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/LargeText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/time"
                                android:textAllCaps="false"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/LargeText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/location"
                                android:textAllCaps="false"
                                android:textStyle="bold" />

                            <TextView
                                style="@style/LargeText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/threat_level"
                                android:textAllCaps="false"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/alt_admin_viewreport_category"
                                style="@style/ReportText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Drugs and Alcohol"
                                android:textAllCaps="false" />

                            <TextView
                                android:id="@+id/alt_admin_viewreport_id"
                                style="@style/ReportText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="012345"
                                android:textAllCaps="false" />

                            <TextView
                                android:id="@+id/alt_admin_viewreport_date"
                                style="@style/ReportText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1/1/1970"
                                android:textAllCaps="false" />

                            <TextView
                                android:id="@+id/alt_admin_viewreport_time"
                                style="@style/ReportText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="12:00PM"
                                android:textAllCaps="false" />

                            <TextView
                                android:id="@+id/alt_admin_viewreport_location"
                                style="@style/ReportText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Gym"
                                android:textAllCaps="false" />

                            <TextView
                                android:id="@+id/alt_admin_viewreport_threat"
                                style="@style/ReportText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textAllCaps="false" />

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/LargeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/description" />

                        <TextView
                            android:id="@+id/alt_admin_viewreport_description"
                            style="@style/ReportText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I saw Jimmy smoking DRUGS in the locker room"
                            android:textStyle="italic" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/LargeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/attachments" />

                        <TextView
                            android:id="@+id/alt_admin_viewreport_media"
                            style="@style/HelperText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/not_given"
                            android:textSize="18sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/button_viewreport_edittags"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:alpha=".5"
                            android:scaleType="centerCrop"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_edit_black_24dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/LargeText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/status" />

                                    <TextView
                                        style="@style/LargeText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/assigned_to" />

                                    <TextView
                                        style="@style/LargeText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Keywords" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/alt_admin_viewreport_status"
                                        style="@style/ReportText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Open"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/alt_admin_viewreport_assignedto"
                                        style="@style/ReportText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Saban, Nick"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/alt_admin_viewreport_tags"
                                        style="@style/ReportText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Drugs, Jimmy"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    app:contentPadding="5dp">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/button_viewreport_editnotes"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:alpha=".5"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_edit_black_24dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/LargeText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/admin_notes"
                                app:layout_constraintBottom_toTopOf="@+id/input_viewreport_adminnotes" />

                            <TextView
                                android:id="@+id/input_viewreport_adminnotes"
                                style="@style/TextField"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:lines="4"
                                android:singleLine="false"/>
                        </LinearLayout>
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    style="@style/ActivitySubheader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="@string/button_report_logs"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="50dp" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_admin_goto_report_messages"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        app:backgroundTint="@color/colorPrimaryDark"
        app:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/sym_action_chat" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="40dp"
        android:clickable="false"
        android:elevation="12dp"
        app:backgroundTint="#00FFFFFF"
        app:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_admin_goto_report_messages"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_notification_overlay" />

</android.support.constraint.ConstraintLayout>