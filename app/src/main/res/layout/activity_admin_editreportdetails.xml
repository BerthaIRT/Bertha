<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminEditReportActivity">

    <TextView
        style="@style/ActivityHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Report Details"
        android:theme="@style/ActivityHeader" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:contentPadding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/LargeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:text="@string/status" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_editreport_open"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Open" />

                            <RadioButton
                                android:id="@+id/rb_editreport_inprogress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In Progress" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rb_editreport_closed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Closed" />

                            <RadioButton
                                android:id="@+id/rb_editreport_resolved"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Resolved" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/LargeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/assigned_to" />

                    <TextView
                        android:id="@+id/alt_editreport_assignedto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A" />

                    <TextView
                        android:id="@+id/button_editreport_assignedto"
                        style="@style/ActivitySubheader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="Edit Assigned Admins"
                        tools:layout_editor_absoluteX="5dp"
                        tools:layout_editor_absoluteY="50dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:contentPadding="5dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/button_editreport_tagsinfo"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:alpha=".7"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_info_black_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/LargeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tags" />

                        <TextView
                            style="@style/LargeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Key Words"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/alt_editreport_keywords"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A" />

                        <TextView
                            android:id="@+id/button_editreport_keywords"
                            style="@style/ActivitySubheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="Edit Key Words"
                            tools:layout_editor_absoluteX="5dp"
                            tools:layout_editor_absoluteY="50dp" />

                        <TextView
                            style="@style/LargeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Selected Catagories"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/alt_editreport_categories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A" />

                        <TextView
                            android:id="@+id/button_editreport_categories"
                            style="@style/ActivitySubheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="Edit Selected Categories"
                            tools:layout_editor_absoluteX="5dp"
                            tools:layout_editor_absoluteY="50dp" />

                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button_editreport_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/button_editreport_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>