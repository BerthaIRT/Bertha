<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminEditReportActivity">

    <TextView
        android:id="@+id/title_edit_report_details"
        style="@style/ActivityHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Report Details"
        android:theme="@style/ActivityHeader" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:contentPadding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_admin_editreport_status"
                        style="@style/LargeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp">
                        <RadioGroup
                            android:id="@+id/radio_group_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/rb_status_unopened"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unopened"/>
                            <RadioButton
                                android:id="@+id/rb_status_open"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Open"/>
                            <RadioButton
                                android:id="@+id/rb_status_closed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Closed"/>
                        </RadioGroup>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_editreport_assignedto"
                        style="@style/LargeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/assigned_to" />

                    <TextView
                        android:id="@+id/label_editreport_assignedto_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"/>
                    <TextView
                        android:id="@+id/select_edit_assignedto"
                        style="@style/ActivitySubheader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="Edit Assigned Admins"
                        tools:layout_editor_absoluteX="5dp"
                        tools:layout_editor_absoluteY="50dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:contentPadding="5dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/button_viewreport_edittags"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:alpha=".7"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_info_black_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/label_editreport_tags"
                            style="@style/LargeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tags" />
                        <TextView
                            android:id="@+id/label_editreport_tags_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:text="N/A"/>
                        <TextView
                            android:id="@+id/label_editreport_keywords"
                            style="@style/LargeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Key Words" />
                        <TextView
                            android:id="@+id/label_editreport_keywords_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"/>
                        <TextView
                            android:id="@+id/select_edit_keywords"
                            style="@style/ActivitySubheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="Edit Key Words"
                            tools:layout_editor_absoluteX="5dp"
                            tools:layout_editor_absoluteY="50dp" />
                        <TextView
                            android:id="@+id/label_editreport_categories"
                            style="@style/LargeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Selected Catagories" />
                        <TextView
                            android:id="@+id/label_editreport_categories_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"/>
                        <TextView
                            android:id="@+id/select_edit_categories"
                            style="@style/ActivitySubheader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="Edit Selected Categories"
                            tools:layout_editor_absoluteX="5dp"
                            tools:layout_editor_absoluteY="50dp" />

                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>