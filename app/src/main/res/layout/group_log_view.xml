<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_log_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_group_log1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/alt_group_log_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text = "11/3/18"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/alt_group_log_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "10:52 am"
                android:textSize="12sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/alt_group_log_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a Report Log"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/linear_group_log2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/linear_group_log3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Was: "
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/alt_group_log_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is a test"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_group_log4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Now: "
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/alt_group_log_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This test passed"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_group_log5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By: "
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/alt_group_log_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="12sp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>