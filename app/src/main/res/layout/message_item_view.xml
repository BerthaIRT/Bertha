<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_date"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:padding="10dp"
        android:textSize="12sp"
        android:text="10/15/18"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/chat_right_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/right_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="80dp"
            android:paddingStart="80dp">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/right_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/right_message_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_message_drawable"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="5dp"
                    android:text="This is a test to see what happens when it gets long I dont"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/message_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_error_black_24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible"
                    app:layout_constraintTop_toTopOf="@+id/right_message_body"
                    app:layout_constraintBottom_toBottomOf="@+id/right_message_body"
                    app:layout_constraintLeft_toRightOf="@+id/right_message_body"/>

                <TextView
                    android:id="@+id/right_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:text="10:10 pm"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@id/right_message_body"
                    app:layout_constraintTop_toBottomOf="@+id/right_message_body" />
            </android.support.constraint.ConstraintLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_left_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="80dp"
        android:paddingEnd="80dp">

            <LinearLayout
                android:id="@+id/left_message_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/left_message_body"
                        android:background="@drawable/left_message_drawable"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textSize="18sp"
                        android:text="This is a test to see what happens when it gets really really long" />
                    <TextView
                        android:id="@+id/left_message_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:text="10:10 pm"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:visibility="gone"/>
            </LinearLayout>

    </LinearLayout>
</LinearLayout>