<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingStart="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_message_date"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textSize="12sp"
            android:text="10/15/18"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/my_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_message_date"
            android:paddingLeft="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_message_body"
                android:background="@drawable/my_message_drawable"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="18sp"
                android:text="Placeholder messageObject" />

            <ImageView
                android:id="@+id/my_message_error"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_error_black_24dp"
                android:visibility="gone"/>

        </LinearLayout>
        <TextView
            android:id="@+id/my_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-80dp"
            android:layout_alignBottom="@+id/my_message_container"
            android:layout_toLeftOf="@id/my_message_container"
            android:layout_toStartOf="@id/my_message_container"
            android:gravity="bottom"
            android:text="10:10 pm"
            android:textColor="#000000"
            android:textSize="8sp" />
    </RelativeLayout>
</RelativeLayout>