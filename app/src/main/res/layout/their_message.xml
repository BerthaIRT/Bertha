<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/their_message_date"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textSize="12sp"
            android:text="10/15/18"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/their_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/their_message_date"
            android:paddingRight="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/their_message_body"
                android:background="@drawable/their_message_drawable"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="18sp"
                android:text="This is a test" />
        </LinearLayout>

        <TextView
            android:id="@+id/their_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-80dp"
            android:layout_alignBottom="@+id/their_message_container"
            android:layout_toRightOf="@id/their_message_container"
            android:layout_toEndOf="@id/their_message_container"
            android:gravity="bottom"
            android:text="10:10 pm"
            android:textColor="#000000"
            android:textSize="8sp" />
    </RelativeLayout>
</RelativeLayout>